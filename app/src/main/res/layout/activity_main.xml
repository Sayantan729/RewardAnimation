<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainpackage.MainActivity">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/celebrate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_speed="3"
        app:lottie_autoPlay="false"/>

    <TextView
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8sp"
        app:layout_constraintBottom_toTopOf="@+id/tap"
        app:layout_constraintTop_toBottomOf="@+id/rewardprogress"
        app:layout_constraintVertical_bias="0.089"
        tools:layout_editor_absoluteX="0sp"
        android:gravity="center"/>

    <ProgressBar
        android:id="@+id/rewardprogress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.204"
        tools:layout_editor_absoluteX="16sp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:indeterminate="false"
        />

    <Button
        android:id="@+id/tap"
        android:text="@string/tap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8sp"
        android:layout_marginLeft="8sp"
        android:layout_marginTop="8sp"
        android:layout_marginEnd="8sp"
        android:layout_marginRight="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rewardprogress" />




</androidx.constraintlayout.widget.ConstraintLayout>